<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/form"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/LN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/assetcode"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:paddingTop="10dp"
                    android:text="Asset Name:"
                    android:textColor="@color/Tex"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kode_with_safety"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="Asset Name "
                    android:textColor="@color/Tex"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LN1"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/assetname"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:paddingTop="10dp"
                    android:text="Asset Code :"
                    android:textColor="@color/Tex"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kode_aset_with_safety"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="Asset Code "
                    android:textColor="@color/Tex"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LN3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LN2"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:paddingTop="10dp"
                    android:text="Date :"
                    android:textColor="@color/Tex"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date_with_safety"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="ate "
                    android:textColor="@color/Tex"
                    android:textSize="16dp" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/LN3"
                android:background="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="10dp"
                android:text="Click to view data"
                android:textColor="@color/blue" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
